{
	"name": "adichan/wallet",
	"description": "A comprehensive wallet system for Laravel applications",
	"keywords": ["adichan", "wallet", "payment", "e-wallet", "laravel"],
	"homepage": "https://github.com/adichan/wallet",
	"license": "MIT",
	"type": "library",
	"authors": [
		{
			"name": "Adrian Radores",
			"email": "mobistyle35@gmail.com",
			"role": "Developer"
		}
	],
	"require": {
		"php": "^8.3",
		"illuminate/support": "^10.0|^11.0|^12.0",
		"illuminate/database": "^10.0|^11.0|^12.0",
		"illuminate/events": "^10.0|^11.0|^12.0"
	},
	"require-dev": {
		"orchestra/testbench": "^8.0|^9.0|^10.0",
		"driftingly/rector-laravel": "^2.1.3",
		"fakerphp/faker": "^1.24.1",
		"laravel/tinker": ">=2.10.2",
		"larastan/larastan": "^3.8.0",
		"laravel/boost": "^1.8.3",
		"laravel/pail": "^1.2.4",
		"laravel/pint": "^1.26.0",
		"mockery/mockery": "^1.6.12",
		"nunomaduro/collision": "^8.8.3",
		"pestphp/pest": "^4.1.5",
		"pestphp/pest-plugin-browser": "^4.1.1",
		"pestphp/pest-plugin-laravel": "^4.0.0",
		"pestphp/pest-plugin-type-coverage": "^4.0.3",
		"rector/rector": "^2.2.8"
	},
	"autoload": {
		"psr-4": {
			"Adichan\\Wallet\\": "src",
			"Database\\Factories\\Adichan\\Wallet\\": "src/database/factories/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Adichan\\Wallet\\Tests\\": "tests"
		}
	},
	"scripts": {
		"test": "vendor/bin/pest",
		"test-coverage": "vendor/bin/pest --coverage",
		"stan": "vendor/bin/phpstan analyse",
		"pint": "vendor/bin/pint",
		"lint": "vendor/bin/pint --test"
	},
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"pestphp/pest-plugin": true
		}
	},
	"extra": {
		"laravel": {
			"providers": ["Adichan\\Wallet\\WalletServiceProvider"],
			"aliases": {
				"Wallet": "Adichan\\Wallet\\Facades\\Wallet"
			}
		}
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}
